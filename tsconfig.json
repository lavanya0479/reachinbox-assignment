{
  "compilerOptions": {
    /* ---------- Output Settings ---------- */
    "target": "ES2020",
    "module": "commonjs",                        // âœ… Fixes import/export errors
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,

    /* ---------- Type Handling ---------- */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,

    /* ---------- Source Maps & Declarations ---------- */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* ---------- Node.js Environment ---------- */
    "lib": ["ES2020"],
    "types": ["node"],

    /* ---------- Misc ---------- */
    "noEmitOnError": true,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
